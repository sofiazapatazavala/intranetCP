<p id="notice"><%= notice %></p>

<div class="row my-1">
  <div class="col-xs-8">
    <h3>Bailes en Pareja</h3>
  </div>
  <div class="col-xs-4">
    <%= link_to 'âž• Nuevo', new_couple_path, class: "btn btn-block btn-primary", role: "button"  %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nombre1</th>
      <th>Nombre2</th>
      <th>Contacto</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Comoseenteraron</th>
      <th>Descuento</th>
      <th>Comentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @couples.each do |couple| %>
      <tr>
        <td><%= couple.nombre1 %></td>
        <td><%= couple.nombre2 %></td>
        <td><%= couple.contacto %></td>
        <td><%= couple.email %></td>
        <td><%= couple.telefono %></td>
        <td><%= couple.comoseenteraron %></td>
        <td><%= couple.descuento %></td>
        <td><%= couple.comentarios %></td>
        <td><%= link_to 'Ver', couple, class: "btn btn-block btn-info" %></td>
        <td><%= link_to 'Editar', edit_couple_path(couple), class: "btn btn-block btn-primary" %></td>
        <td><%= link_to 'Borrar', couple, class: "btn btn-block btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Couple', new_couple_path, class: "btn btn-block btn-secondary my-1", role: "button" %>
