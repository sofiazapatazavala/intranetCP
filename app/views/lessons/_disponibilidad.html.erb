<div class="card">
  <div class="card-body">
    <%= week_calendar number_of_weeks: 2, events: @meetings do |date, meetings| %>
      <% meetings.each do |meeting| %>
        <div class="card">
          <div class="card-body">
            <h3><%= meeting.start_time.strftime("%H:%M") %></h3>
            <% if meeting.bloggable_type == "Wedding" %>
              <p class="p-1 p-matri">👰🏻 Matrimonio</p>
              <p class="lead"><%= link_to meeting.bloggable.nombre1, edit_lesson_path(meeting) %> y <%= link_to meeting.bloggable.nombre2, edit_lesson_path(meeting) %></a></p>
            <% elsif meeting.bloggable_type == "Couple" %>
              <p class="p-1 p-parejas">👯 Baile en Pareja</p>
              <p class="lead"><%= link_to meeting.bloggable.nombre1, edit_lesson_path(meeting) %> y <%= link_to meeting.bloggable.nombre2, edit_lesson_path(meeting) %></a></p>
            <% elsif meeting.bloggable_type == "SpecialClass" %>
              <p class="p-1 p-parejas">👯 Baile en Pareja</p>
              <p class="lead"><%= link_to meeting.bloggable.nombre1, edit_lesson_path(meeting) %></a></p>
            <% else %>
              <p class="lead"><%= link_to meeting.bloggable.nombre1, edit_lesson_path(meeting) %></a></p>
            <% end %>
          </div>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
