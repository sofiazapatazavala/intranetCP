<p id="notice"><%= notice %></p>

<div class="row my-1">
  <div class="col-md-8">
    <h3>Clases</h3>
  </div>
  <div class="col-md-4">
    <%= link_to '➕ Nueva', new_lesson_path, class: "btn btn-block btn-primary", role: "button"  %>
  </div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Titulo</th>
      <th>Notas</th>
      <th>¿Para qué persona?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.fecha %></td>
        <td><%= lesson.titulo %></td>
        <td><%= lesson.notas %></td>
        <td><% if lesson.bloggable_type == "Wedding" %>Matrimonio de <% end %><%# lesson.bloggable.nombre1 %></td>
        <td><%= link_to 'Ver', lesson, class: "btn btn-block btn-info" %></td>
        <td><%= link_to 'Editar', edit_lesson_path(lesson), class: "btn btn-block btn-primary" %></td>
        <td><%= link_to 'Borrar', lesson, class: "btn btn-block btn-danger", method: :delete, data: { confirm: '¿Segura?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Inscribir nueva clase', new_lesson_path, class: "btn btn-block btn-secondary my-1", role: "button" %>
