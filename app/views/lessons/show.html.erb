<div class="row my-3">
  <div class="col-sm-6">
    <h3>Clase:</h3>
    <p class="lead"><%= @lesson.bloggable.nombre1 %></strong></p>
    <small>Registrada el día <%= @lesson.fecha %></small>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-6">
        <p><%= link_to '✏ Editar', edit_lesson_path(@lesson), class: "btn btn-block btn-warning", role: "button" %></p>
      </div>
      <div class="col-sm-6">
        <p><%= link_to '⬅ Volver', lessons_path, class: "btn btn-block btn-secondary", role: "button" %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= link_to 'Borrar', @lesson, class: "btn btn-block btn-danger", method: :delete, data: { confirm: '¿Segura?' } %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="row mb-3">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <p>Inicio:</p>
        <p class="lead"><%= @lesson.start_time.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <p>Término:</p>
        <p class="lead"><%= @lesson.end_time.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div class="card-group">
      <div class="card mb-3">
        <div class="card-block">
          <h4 class="card-title"><%= @lesson.titulo %></h4>
          <%= @lesson.notas %>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-block">
          <p class="lead card-title">Videos de la clase</p>
          <% @lesson.videos.each do |video| %>
          <div class="embed-responsive embed-responsive-16by9 mb-2">
            <%= video_tag(video, controls: true, class: "embed-responsive-item") %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
