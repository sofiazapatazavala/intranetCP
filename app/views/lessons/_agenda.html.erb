<div class="card">
  <div class="card-block">
    <p class="lead">Agenda de hoy</p>
    <%= calendar number_of_days: 1, events: @meetings do |date, meetings| %>
      <%= date %>

      <% meetings.each do |meeting| %>
        <div>
          <p><%= meeting.wedding.nombre1 %> <%= meeting.wedding.apellido1 %> y <%= meeting.wedding.nombre2 %> <%= meeting.wedding.apellido2 %></p>
          <p class="lead"><%= meeting.start_time %></p>
        </div>
      <% end %>

    <% end %>
    <p><a href="<%= agenda_path %>" target="_top">Revisar agenda</a></p>
  </div>
</div>
