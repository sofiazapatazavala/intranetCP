<div class="row my-3">
  <div class="col-md-8">
    <h3>Resultados de búsqueda: Alumnas</h3>
  </div>
  <div class="col-md-4">
    <%= link_to '➕ Nuevo', new_student_path, class: "btn btn-block btn-primary", role: "button"  %>
  </div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>E-mail</th>
      <th>Teléfono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to(student.nombre, student_path(student)) %></td>
        <td><%= student.email %></td>
        <td><%= student.telefono %></td>
        <td><%= link_to 'Ver', student, class: "btn btn-block btn-info" %></td><%# i18n!! %>
        <td><%= link_to 'Editar', edit_student_path(student), class: "btn btn-block btn-primary" %></td>
        <td><%= link_to 'Borrar', student, class: "btn btn-block btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @students %>
</div>
