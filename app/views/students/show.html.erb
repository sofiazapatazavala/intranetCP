<div class="row">
  <div class="col-md-8 col-lg-9 col-xl-10 mb-3 mb-md-0">
    <h3 class="py-2">Alumna:</h3>
    <p class="lead"><%= @student.nombre %></p>
    <%= link_to 'Agregar nueva alumna', new_student_path, class: "btn btn-block btn-primary", role: "button" %>
  </div>
  <div class="col-md-4 col-lg-3 col-xl-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-subtitle text-center hidden-md-up">Acciones:</h5>
        <div class="d-flex justify-content-center">
          <div class="btn-group-vertical" role="group" aria-label="Acciones para esta clase">
            <%= link_to '⬅ Volver', students_path, class: "btn btn-secondary", role: "button" %>
            <%= link_to '✏ Editar', edit_student_path(@student), class: "btn btn-warning", role: "button" %>
            <%= link_to '🗑 Borrar', @student, class: "btn btn-danger", method: :delete, data: { confirm: '¿Segura?' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
<hr>

<p id="notice"><%= notice %></p>

<ul class="list-group">
  <li class="list-group-item">Nombre: <strong><%= @student.nombre %></strong></li>
  <li class="list-group-item">Telefono: <%= @student.telefono %></li>
  <li class="list-group-item">Email: <%= @student.email %></li>
</ul>

<button class="btn btn-outline-warning btn-md btn-block my-3" type="button" data-toggle="collapse" data-target="#colapsarInfo" aria-expanded="false" aria-controls="colapsarInfo">
  Mostrar más información
</button>
<div class="collapse" id="colapsarInfo">
  <ul class="list-group">
    <li class="list-group-item">¿Cómo se enteró?: <%= @student.comoseenteraron %></li>
    <li class="list-group-item">Descuento: <%= @student.descuento %></li>
    <li class="list-group-item">Comentarios: <%= @student.comentarios %></li>
    <li class="list-group-item">Estado de pago: <%= @student.pago %></li>
    <li class="list-group-item">Comentarios respecto al pago: <%= @student.comentarios_pago %></li>
  </ul>
</div>
