<div class="row my-1">
  <div class="col-sm-6">
    <h3>Matrimonio:</h3>
    <p class="lead"><%= @wedding.nombre1 %> y <%= @wedding.nombre2 %></p>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-6">
        <p><%= link_to '✏ Editar', edit_wedding_path(@wedding), class: "btn btn-block btn-warning", role: "button" %></p>
      </div>
      <div class="col-sm-6">
        <p><%= link_to '⬅ Volver', weddings_path, class: "btn btn-block btn-secondary", role: "button" %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= link_to 'Agregar nueva clase', new_lesson_path, class: "btn btn-block btn-primary", role: "button" %>
      </div>
    </div>
  </div>
</div>
<hr>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <p>Novia:</p>
        <p class="lead"><%= @wedding.nombre1 %></p>
        <%# Mostrar link al teléfono y mail de novia, novio y contacto %>
        <p class="lead"><%= mail_to @wedding.email_novia %></p>
        <p class="lead"><%= link_to @wedding.telefono_novia, "tel:#{@wedding.telefono_novia}" %></p>
        <p class="lead"><%= @wedding.rut_novia %></p>
        <p class="lead"><%= @wedding.instagram_novia %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <p>Novio:</p>
        <p class="lead"><%= @wedding.nombre2 %></p>
        <p class="lead"><%= mail_to @wedding.email_novio %></p>
        <p class="lead"><%= link_to @wedding.telefono_novio, "tel:#{@wedding.telefono_novio}" %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Fecha de matrimonio:</p>
        <p class="lead"><%= @wedding.fecha_matri %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Correo:</p>
        <p class="lead"><%= @wedding.email_novia %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Teléfono:</p>
        <p class="lead"><%= @wedding.telefono_novia %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Origen:</p>
        <p class="lead"><%= @wedding.origen %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-block">
        <p class="lead">Diseño de Piso</p>
      </div>
      <%= image_tag @wedding.floordesign, class: "img-fluid d-block mx-auto" %>
    </div>
  </div>
</div>

<button class="btn btn-outline-warning btn-md btn-block my-1" type="button" data-toggle="collapse" data-target="#colapsarInfo" aria-expanded="false" aria-controls="colapsarInfo">
  Mostrar más información
</button>
<div class="collapse" id="colapsarInfo">
  <div class="row">
    <div class="col-xs-12 mb-1">
      <ul class="list-group">
        <li class="list-group-item">¿Cómo se enteraron de la Academia?: <%= @wedding.origen %></li>
        <li class="list-group-item">Descuento: <%= @wedding.tipo_descuento %></li>
        <li class="list-group-item">Comentarios: <%= @wedding.comentarios %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="card">
        <div class="card-block">
          <h4>Información sobre clases</h4>
          <div class="table-responsive">
            <table class="table">
              <tr>
                <th>Clase</th>
                <th>Hora</th>
                <th>¿Está pagada?</th>
                <th colspan="2"></th>
              </tr>
              <% @wedding.lessons.each do |lesson| %>
              <tr>
                <td><%= lesson.titulo %></td>
                <td><%= lesson.start_time %></td>
                <td>
                  <% if lesson.clasepagada == true %>
                  Sí
                  <% else %>
                  No
                  <% end %>
                </td>
                <td><%= link_to "Ver", lesson, class: "btn btn-block btn-info", role: "button" %></td>
                <td><%= link_to "Editar", edit_lesson_path(lesson), class: "btn btn-block btn-primary", role: "button" %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
