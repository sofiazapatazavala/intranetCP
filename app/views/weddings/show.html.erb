<div class="row my-1">
  <div class="col-sm-6">
    <h3>Matrimonio:</h3>
    <p class="lead"><%= @wedding.nombre1 %> <%= @wedding.apellido1 %> y <%= @wedding.nombre2 %> <%= @wedding.apellido2 %></p>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-6">
        <p><%= link_to '✏ Editar', edit_wedding_path(@wedding), class: "btn btn-block btn-warning", role: "button" %></p>
      </div>
      <div class="col-sm-6">
        <p><%= link_to '⬅ Volver', weddings_path, class: "btn btn-block btn-secondary", role: "button" %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= link_to 'Agregar nueva clase', new_lesson_path, class: "btn btn-block btn-primary", role: "button" %>
      </div>
    </div>
  </div>
</div>
<hr>

<p id="notice"><%= notice %></p>

<%
#
#<p>
#  <strong>Created at:</strong>
#  <%= @wedding.created_at %
#</p>
#
#<p>
#  <strong>Updated at:</strong>
#  <%= @wedding.updated_at %
#</p>

%>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <p>Novia:</p>
        <p class="lead"><%= @wedding.nombre1 %> <%= @wedding.apellido1 %></p>
        <%# Mostrar link al teléfono y mail de novia, novio y contacto %>
        <p class="lead"><%= mail_to @wedding.email_novia %></p>
        <p class="lead"><%= link_to @wedding.telefono_novia, "tel:#{@wedding.telefono_novia}" %></p>
        <p class="lead"><%= @wedding.rut_novia %></p>
        <p class="lead"><%= @wedding.instagram_novia %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <p>Novio:</p>
        <p class="lead"><%= @wedding.nombre2 %> <%= @wedding.apellido2 %></p>
        <p class="lead"><%= mail_to @wedding.email_novio %></p>
        <p class="lead"><%= link_to @wedding.telefono_novio, "tel:#{@wedding.telefono_novio}" %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Fecha de matrimonio:</p>
        <p class="lead"><%= @wedding.fecha_matri %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Correo:</p>
        <p class="lead"><%= @wedding.email_novia %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Teléfono:</p>
        <p class="lead"><%= @wedding.telefono_novia %></p>
      </div>
    </div>
  </div>

  <div class="col-sm-6 col-lg-3">
    <div class="card">
      <div class="card-block">
        <p>Origen:</p>
        <p class="lead"><%= @wedding.origen %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-block">
        <p class="lead">Diseño de Piso</p>
      </div>
      <%= image_tag @wedding.floordesign, class: "img-fluid" %>
      <div class="card-block">
        Comentarios:
        <%= @wedding.comentarios %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-block">
        Datos financieros: Próximamente
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-block">
        Próximas clases: Próximamente
      </div>
    </div>
  </div>
</div>
