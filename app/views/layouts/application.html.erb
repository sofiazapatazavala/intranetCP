<!DOCTYPE html>
<html>
  <head>
    <title>IntranetCP</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%= notice %>
          <%= alert %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-5 col-sm-4 col-md-3 col-lg-2">
              <a href="<%= root_path %>"><%= image_tag 'logo.png', :class => "img-fluid my-1" %></a>
            </div>
            <% if user_signed_in? %>
            <div class="col-md-1">
              <a href="<%= weddings_path %>"><%= image_tag 'novias.png', :class => "img-fluid my-1 mx-auto d-block" %></a>
            </div>
            <div class="col-md-1">
              <a href="<%= lessons_path %>"><%= image_tag 'clases.png', :class => "img-fluid my-1 mx-auto d-block" %></a>
            </div>
            <div class="col-md-1">
              <a href="<%= destroy_user_session_path %>" data-method="delete"><%= image_tag 'signout.png', :class => "img-fluid my-1 mx-auto d-block" %></a>
            </div>
            <% end %>
          </div>
        </div>
      </div>

<%
