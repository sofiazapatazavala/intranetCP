<div class="row my-3">
  <div class="col-sm-6">
    <h3>Archivo:</h3>
    <p class="lead"><%= @archive.nombre %></p>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-md-4">
        <p><%= link_to '⬅ Volver', archives_path, class: "btn btn-block btn-secondary", role: "button" %></p>
      </div>
      <div class="col-md-4">
        <p><%= link_to '✏ Editar', edit_archive_path(@archive), class: "btn btn-block btn-warning", role: "button" %></p>
      </div>
      <div class="col-md-4">
        <p><%= link_to 'Nuevo Matrimonio', new_wedding_path, class: "btn btn-block btn-success", role: "button" %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Borrar', @archive, class: "btn btn-block btn-danger", method: :delete, data: { confirm: '¿Segura?' } %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<ul class="list-group">
  <li class="list-group-item">Nombre: <strong><%= @archive.nombre %></strong></li>
  <li class="list-group-item">E-mail: <%= @archive.email %></li>
  <li class="list-group-item">Teléfono: <%= @archive.telefono %></li>
  <li class="list-group-item">Procedencia: <%= @archive.procedencia %></li>
  <li class="list-group-item">Comentarios: <%= @archive.comentarios %></li>
</ul>
