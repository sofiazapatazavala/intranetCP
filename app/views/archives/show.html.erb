<div class="row">
  <div class="col-md-8 col-lg-9 col-xl-10 mb-3 mb-md-0">
    <h3 class="p-2 p-parejas text-white">🙋🏻 Persona interesada:</h3>
    <p class="lead"><%= @archive.nombre %></p>
      <% if @archive.procedencia == "Matrimonio" %>
        <%= link_to 'Inscribir en matrimonio', new_wedding_path, class: "btn btn-block btn-lg btn-primary", role: "button" %>
      <% elsif @archive.procedencia == "Clase particular" %>
        <%= link_to 'Inscribir en clase particular', new_special_class_path, class: "btn btn-block btn-lg btn-primary", role: "button" %>
      <% elsif @archive.procedencia == "Curso" %>
        <%= link_to 'Ver lista de cursos e inscribir', courses_path, class: "btn btn-block btn-lg btn-primary", role: "button" %>
      <% end %>
    <%# Agregar una acción diferenciada según el interés demostrado %>
  </div>
  <div class="col-md-4 col-lg-3 col-xl-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-subtitle text-center hidden-md-up">Acciones:</h5>
        <div class="d-flex justify-content-center">
          <div class="btn-group-vertical" role="group" aria-label="Acciones para esta clase">
            <%= link_to '⬅ Volver', archives_path, class: "btn btn-secondary", role: "button" %>
            <%= link_to '✏ Editar', edit_archive_path(@archive), class: "btn btn-warning", role: "button" %>
            <%= link_to '🗑 Borrar', @archive, class: "btn btn-danger", method: :delete, data: { confirm: '¿Segura?' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>

<p id="notice"><%= notice %></p>

<ul class="list-group">
  <li class="list-group-item">Nombre: <strong><%= @archive.nombre %></strong></li>
  <li class="list-group-item">E-mail: <%= @archive.email %></li>
  <li class="list-group-item">Teléfono: <%= @archive.telefono %></li>
  <li class="list-group-item">Procedencia: <%= @archive.procedencia %></li>
  <li class="list-group-item">Comentarios: <%= @archive.comentarios %></li>
</ul>
