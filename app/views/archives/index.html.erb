<p id="notice"><%= notice %></p>

<div class="row my-3">
  <div class="col-lg-5 col-xl-6">
    <h3>Archivos</h3>
  </div>
  <div class="col-lg-5 col-xl-4">
    <%= form_tag search_archives_path, method: :get do %>
      <div class="row">
        <div class="col-sm-8 col-md-10 col-lg-8">
          <div class="form-group">
            <%= text_field_tag :buscar, params[:buscar], class: "form-control", placeholder: "Busca archivos:" %>
          </div>
        </div>
        <div class="col-sm-4 col-md-2 col-lg-4">
          <%= submit_tag "Buscar", class: "btn btn-info btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-2">
    <%= link_to 'ðŸ—ƒ Descargar', archives_path(format: :csv), :class => 'btn btn-block btn-primary', :role => 'button'  %>
  </div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Procedencia</th>
      <th>Comentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.nombre %></td>
        <td><%= archive.email %></td>
        <td><%= archive.telefono %></td>
        <td><%= archive.procedencia %></td>
        <td><%= archive.comentarios %></td>
        <td><%= link_to 'Ver', archive, class: "btn btn-block btn-info" %></td>
        <td><%= link_to 'Editar', edit_archive_path(archive), class: "btn btn-block btn-primary" %></td>
        <td><%= link_to 'Borrar', archive, class: "btn btn-block btn-danger", method: :delete, data: { confirm: 'Â¿Segura?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'New Archive', new_archive_path, class: "btn btn-block btn-secondary my-3", role: "button" %>
