<p id="notice"><%= notice %></p>

<h1>Archives</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Procedencia</th>
      <th>Comentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.nombre %></td>
        <td><%= archive.email %></td>
        <td><%= archive.telefono %></td>
        <td><%= archive.procedencia %></td>
        <td><%= archive.comentarios %></td>
        <td><%= link_to 'Show', archive %></td>
        <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
        <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

