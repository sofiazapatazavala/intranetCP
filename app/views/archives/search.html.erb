<div class="row my-3">
  <div class="col-md-8">
    <h3>Resultados de búsqueda: Archivos</h3>
  </div>
  <div class="col-md-4">
    <%= link_to '➕ Nuevo', new_archive_path, class: "btn btn-block btn-primary", role: "button"  %>
  </div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>E-mail</th>
      <th>Teléfono</th>
      <th>Procedencia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= link_to(archive.nombre, archive_path(archive)) %></td>
        <td><%= archive.email %></td>
        <td><%= archive.telefono %></td>
        <td><%= archive.procedencia %></td>
        <td><%= link_to 'Ver', archive, class: "btn btn-block btn-info" %></td><%# i18n!! %>
        <td><%= link_to 'Editar', edit_archive_path(archive), class: "btn btn-block btn-primary" %></td>
        <td><%= link_to 'Borrar', archive, class: "btn btn-block btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @archives %>
</div>
